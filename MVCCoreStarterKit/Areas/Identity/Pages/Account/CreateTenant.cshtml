@page
@model MVCCoreStarterKit.Areas.Identity.Pages.Account.CreateTenantModel
@{
    ViewData["Title"] = "Create Tenant";
}
<div class="container body-content">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-8">
            <section>
                <form id="tenant" method="post">
                    <h4>Create a new Tenant</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.TenantID"></label>
                        <input asp-for="Input.TenantID" class="form-control" />
                        <span asp-validation-for="Input.TenantID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.TenantName"></label>
                        <input asp-for="Input.TenantName" class="form-control" />
                        <span asp-validation-for="Input.TenantName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-4">
            <section>
                <h4>Further Instruction</h4>
                <hr />
                <div>
                    <p>
                        If you want to add "Description" or enable a Module(s) to a newly created tenant, please go to Settings &#8594 Tenant Setup and update it.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
